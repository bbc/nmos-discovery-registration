{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes an IS-07 event Source",
  "title": "IS-07 Event Source resource",
  "allOf": [
    { "$ref": "source_core.json" },
    {
      "type": "object",
      "required": [
        "format",
        "data_type",
        "event_type"
      ],
      "properties": {
        "format": {
          "description": "Format of the data coming from the Source as a URN",
          "type": "string",
          "enum": [
            "urn:x-nmos:format:data"
          ],
          "format": "uri"
        },
        "format_subtype" : {
          "description" : "Subclassification of the data type produced by this Source as a URN",
          "type" : "string",
          "enum": [
            "amwa/is07"
          ],
          "format": "uri"
        },
        "event_type" : {
          "description" : "Event type generated by this Source as defined in AMWA IS-07",
          "type" : "string"
        }
      }
    }
  ]
}
